    "version": "0.2.0",
    "configurations": [
        {
            "name": "Clarinet: Run with Frontend (test_front)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/clarinet",
            "args": [
                "run",
                "--with-frontend"
            ],
            "cwd": "${workspaceFolder}/examples/test_front",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python Debugger: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "clarinet"
        }
    ]
}